@page
@model ScaryCavesWeb.Pages.Login
@{
    ViewData["Title"] = "Login returning player";
}
<form method="post">
    <div class="form-group">
        <label asp-for="PlayerName">Name?</label>
        <input asp-for="PlayerName" class="form-control"/>
        <span asp-validation-for="PlayerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" class="form-control" type="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
